<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>adicionaContato</servlet-name>
        <servlet-class>br.com.caelum.br.com.caelum.servlet.AdicionarContatoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adicionaContato</servlet-name>
        <url-pattern>/adiciona-contato</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>removeContato</servlet-name>
        <servlet-class>br.com.caelum.br.com.caelum.servlet.RemoverContatoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeContato</servlet-name>
        <url-pattern>/remove-contato</url-pattern>
    </servlet-mapping>
</web-app>
